    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <!-- Help Categories -->
            <section class="help-categories">
                <div class="category-card">
                    <div class="category-icon">
                        <i class="fas fa-question-circle"></i>
                    </div>
                    <h3>Questions fréquentes</h3>
                    <p>Trouvez rapidement des réponses aux questions les plus courantes</p>
                    <a href="#faq" class="btn-text">Consulter les FAQ</a>
                </div>

                <div class="category-card">
                    <div class="category-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h3>Signaler un problème</h3>
                    <p>Rencontrez-vous un problème avec notre service ? Signalez-le ici</p>
                    <a href="#complaint-form" class="btn-text">Déposer une plainte</a>
                </div>

                <div class="category-card">
                    <div class="category-icon">
                        <i class="fas fa-book"></i>
                    </div>
                    <h3>Guides d'utilisation</h3>
                    <p>Consultez nos guides détaillés pour utiliser CarShare</p>
                    <a href="#" class="btn-text">Voir les guides</a>
                </div>

                <div class="category-card">
                    <div class="category-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                    <h3>Contacter le support</h3>
                    <p>Besoin d'une assistance personnalisée ? Contactez-nous directement</p>
                    <a href="#contact" class="btn-text">Nous contacter</a>
                </div>
            </section>

            <!-- Complaint Form Section -->
            <section class="complaint-section" id="complaint-form">
                <div class="section-header">
                    <h2>Déposer une plainte</h2>
                    <p>Si vous rencontrez un problème avec notre service, veuillez remplir ce formulaire. Notre équipe traitera votre demande dans les plus brefs délais.</p>
                </div>

                <div class="complaint-form-container">
                    <form id="complaint-form" class="complaint-form">
                        <!-- <div class="form-group">
                            <label for="name">Nom complet</label>
                            <input type="text" id="name" name="name" placeholder="Votre nom complet" required>
                        </div> -->

                        <!-- <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" placeholder="Votre adresse email" required>
                        </div> -->

                        <div class="form-group">
                            <label for="complaint-type">Type de problème</label>
                            <select id="complaint-type" name="complaint-type" required>
                                <option value="">Sélectionnez une catégorie</option>
                                <option value="technical">Problème technique</option>
                                <option value="billing">Facturation</option>
                                <option value="reservation">Réservation</option>
                                <option value="vehicle">Véhicule</option>
                                <option value="user">Utilisateur/Locataire</option>
                                <option value="other">Autre</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="complaint-subject">Sujet</label>
                            <input type="text" id="complaint-subject" name="complaint-subject" placeholder="Résumé court du problème" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="complaint-description">Description détaillée</label>
                            <textarea id="complaint-description" name="complaint-description" rows="6" placeholder="Décrivez votre problème en détail..." required></textarea>
                        </div>
                        
                        <div class="form-group">
                            <label for="complaint-priority">Priorité</label>
                            <select id="complaint-priority" name="complaint-priority" required>
                                <option value="low">Basse - Pas urgent</option>
                                <option value="medium" selected>Moyenne - Attention requise</option>
                                <option value="high">Haute - Urgent</option>
                                <option value="critical">Critique - Bloquant</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="complaint-attachments">Pièces jointes (optionnel)</label>
                            <div class="file-upload">
                                <input type="file" id="complaint-attachments" name="complaint-attachments" multiple>
                                <label for="complaint-attachments" class="file-upload-label">
                                    <i class="fas fa-cloud-upload-alt"></i> Choisir des fichiers
                                </label>
                                <div id="file-list" class="file-list"></div>
                            </div>
                            <p class="file-help">Formats acceptés: JPG, PNG, PDF. Taille max: 5MB</p>
                        </div>
                        
                        <div class="form-actions">
                            <button type="reset" class="btn btn-outline">Annuler</button>
                            <button type="submit" class="btn btn-primary">Soumettre la plainte</button>
                        </div>
                    </form>
                </div>
            </section>

            <!-- FAQ Section -->
            <section class="faq-section" id="faq">
                <div class="section-header">
                    <h2>Questions fréquemment posées</h2>
                    <p>Trouvez rapidement des réponses à vos questions</p>
                </div>

                <div class="faq-tabs">
                    <button class="tab-btn active" data-tab="general">Général</button>
                    <button class="tab-btn" data-tab="renter">Louer une voiture</button>
                    <button class="tab-btn" data-tab="owner">Mettre en location</button>
                    <button class="tab-btn" data-tab="payment">Paiement</button>
                    <button class="tab-btn" data-tab="account">Compte</button>
                </div>

                <div class="faq-content active" id="general-faq">
                    <div class="faq-item">
                        <div class="faq-question">
                            <h4>Comment fonctionne CarShare ?</h4>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="faq-answer">
                            <p>CarShare est une plateforme qui met en relation des propriétaires de véhicules avec des personnes qui souhaitent louer une voiture. Les propriétaires peuvent mettre leur véhicule en location lorsqu'ils ne l'utilisent pas, et les locataires peuvent trouver un véhicule adapté à leurs besoins à proximité.</p>
                        </div>
                    </div>

                    <div class="faq-item">
                        <div class="faq-question">
                            <h4>Comment créer un compte sur CarShare ?</h4>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="faq-answer">
                            <p>Pour créer un compte, cliquez sur le bouton "S'inscrire" en haut à droite de la page d'accueil. Vous devrez fournir votre nom, adresse e-mail, numéro de téléphone et créer un mot de passe. Vous devrez également télécharger une copie de votre permis de conduire pour vérification.</p>
                        </div>
                    </div>

                    <div class="faq-item">
                        <div class="faq-question">
                            <h4>CarShare est-il disponible dans ma ville ?</h4>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="faq-answer">
                            <p>CarShare est actuellement disponible dans les principales villes d'Algérie, notamment Alger, Oran, Constantine, Annaba et plusieurs autres. Nous étendons continuellement notre service à de nouvelles régions. Vous pouvez vérifier la disponibilité dans votre ville en entrant votre localisation sur notre page d'accueil.</p>
                        </div>
                    </div>
                </div>

                <div class="faq-content" id="renter-faq">
                    <div class="faq-item">
                        <div class="faq-question">
                            <h4>Comment louer une voiture sur CarShare ?</h4>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="faq-answer">
                            <p>Pour louer une voiture, créez un compte, recherchez un véhicule disponible dans votre région, sélectionnez les dates de location, et effectuez la réservation en ligne. Vous rencontrerez le propriétaire pour récupérer les clés, ou utiliserez notre système de boîte à clés sécurisée si disponible.</p>
                        </div>
                    </div>

                    <div class="faq-item">
                        <div class="faq-question">
                            <h4>Que faire en cas de panne ou d'accident ?</h4>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="faq-answer">
                            <p>En cas de panne ou d'accident, contactez immédiatement le propriétaire et notre service d'assistance au +213 (0) 23 45 67 89. Tous les véhicules sur CarShare sont couverts par une assurance. Suivez les instructions dans l'application pour documenter l'incident et obtenir de l'aide.</p>
                        </div>
                    </div>
                </div>

                <div class="faq-content" id="owner-faq">
                    <div class="faq-item">
                        <div class="faq-question">
                            <h4>Comment mettre ma voiture en location ?</h4>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="faq-answer">
                            <p>Pour mettre votre voiture en location, créez un compte propriétaire, ajoutez les détails de votre véhicule (photos, description, disponibilité), définissez votre tarif, et publiez l'annonce. Une fois approuvée, votre voiture sera visible pour les locataires potentiels.</p>
                        </div>
                    </div>

                    <div class="faq-item">
                        <div class="faq-question">
                            <h4>Combien puis-je gagner en louant ma voiture ?</h4>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="faq-answer">
                            <p>Les revenus varient selon le modèle de votre véhicule, sa localisation et sa disponibilité. En moyenne, les propriétaires peuvent gagner entre 15 000 et 50 000 DZD par mois. Utilisez notre calculateur de revenus pour obtenir une estimation personnalisée.</p>
                        </div>
                    </div>
                </div>

                <div class="faq-content" id="payment-faq">
                    <!-- Contenu pour l'onglet Paiement -->
                </div>

                <div class="faq-content" id="account-faq">
                    <!-- Contenu pour l'onglet Compte -->
                </div>
            </section>

            <!-- Contact Section -->
            <section class="contact-section" id="contact">
                <div class="section-header">
                    <h2>Contactez-nous</h2>
                    <p>Notre équipe est disponible pour répondre à toutes vos questions</p>
                </div>

                <div class="contact-options">
                    <div class="contact-card">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <h3>Email</h3>
                        <p>support@carshare.dz</p>
                        <p class="contact-note">Réponse sous 24-48h</p>
                        <a href="mailto:support@carshare.dz" class="btn btn-outline">Envoyer un email</a>
                    </div>
                    
                    <div class="contact-card">
                        <div class="contact-icon">
                            <i class="fas fa-phone-alt"></i>
                        </div>
                        <h3>Téléphone</h3>
                        <p>+213 (0) 23 45 67 89</p>
                        <p class="contact-note">Lun-Ven, 9h-17h</p>
                        <a href="tel:+21323456789" class="btn btn-outline">Appeler</a>
                    </div>
                    
                    <div class="contact-card">
                        <div class="contact-icon">
                            <i class="fas fa-comment-dots"></i>
                        </div>
                        <h3>Chat en direct</h3>
                        <p>Assistance immédiate</p>
                        <p class="contact-note">Disponible 7j/7, 9h-20h</p>
                        <button class="btn btn-outline" id="start-chat">Démarrer un chat</button>
                    </div>
                </div>

                <div class="contact-form-container">
                    <h3>Envoyez-nous un message</h3>
                    <form id="contact-form" class="contact-form">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="contact-name">Nom</label>
                                <input type="text" id="contact-name" name="contact-name" required>
                            </div>
                            <div class="form-group">
                                <label for="contact-email">Email</label>
                                <input type="email" id="contact-email" name="contact-email" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="contact-subject">Sujet</label>
                            <input type="text" id="contact-subject" name="contact-subject" required>
                        </div>
                        <div class="form-group">
                            <label for="contact-message">Message</label>
                            <textarea id="contact-message" name="contact-message" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </form>
                </div>
            </section>
        </div>
