<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CarShare Admin - Rapports</title>
    <link rel="stylesheet" href="css/admin/reports.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body>
    <div class="app-container">
      <!-- Sidebar -->
      <%- include('adminAsideBar.ejs',{active : "rapport"}) %>

      <!-- Main Content -->
      <main class="main-content">
        <!-- Header -->
        <header class="header">
          <div class="search-container">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input
              type="text"
              placeholder="Rechercher..."
              class="search-input"
            />
          </div>
          <div class="header-actions">
            <div class="notification-bell">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
              </svg>
              <span class="notification-badge">1</span>
            </div>
            <%- include('adminNavBar.ejs') %>
          </div>
        </header>

        <!-- Page Content -->
        <div class="page-content">
          <div class="reports-page">
            <div class="page-header">
              <h2>Rapports</h2>
              <div class="date-filter">
                <select class="period-select">
                  <option value="month">Ce mois</option>
                  <option value="quarter">Ce trimestre</option>
                  <option value="year">Cette année</option>
                  <option value="custom">Personnalisé</option>
                </select>
                <button class="export-btn">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7 10 12 15 17 10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                  </svg>
                  Exporter
                </button>
              </div>
            </div>

            <div class="reports-grid">
              <div class="report-card">
                <div class="report-header">
                  <h3>Revenus</h3>
                  <div class="report-actions">
                    <button class="report-action">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <circle cx="12" cy="12" r="1"></circle>
                        <circle cx="19" cy="12" r="1"></circle>
                        <circle cx="5" cy="12" r="1"></circle>
                      </svg>
                    </button>
                  </div>
                </div>
                <div class="chart-container">
                  <canvas id="revenueChart"></canvas>
                </div>
                <div class="report-summary">
                  <div class="summary-item">
                    <div class="summary-label">Total</div>
                    <div class="summary-value">DZD45,250</div>
                  </div>
                  <div class="summary-item">
                    <div class="summary-label">Croissance</div>
                    <div class="summary-value positive">+12.5%</div>
                  </div>
                </div>
              </div>

              <div class="report-card">
                <div class="report-header">
                  <h3>Utilisateurs</h3>
                  <div class="report-actions">
                    <button class="report-action">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <circle cx="12" cy="12" r="1"></circle>
                        <circle cx="19" cy="12" r="1"></circle>
                        <circle cx="5" cy="12" r="1"></circle>
                      </svg>
                    </button>
                  </div>
                </div>
                <div class="chart-container">
                  <canvas id="usersChart"></canvas>
                </div>
                <div class="report-summary">
                  <div class="summary-item">
                    <div class="summary-label">Total</div>
                    <div class="summary-value">1,245</div>
                  </div>
                  <div class="summary-item">
                    <div class="summary-label">Nouveaux</div>
                    <div class="summary-value">125</div>
                  </div>
                </div>
              </div>

              <div class="report-card">
                <div class="report-header">
                  <h3>Annonces</h3>
                  <div class="report-actions">
                    <button class="report-action">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <circle cx="12" cy="12" r="1"></circle>
                        <circle cx="19" cy="12" r="1"></circle>
                        <circle cx="5" cy="12" r="1"></circle>
                      </svg>
                    </button>
                  </div>
                </div>
                <div class="chart-container">
                  <canvas id="listingsChart"></canvas>
                </div>
                <div class="report-summary">
                  <div class="summary-item">
                    <div class="summary-label">Total</div>
                    <div class="summary-value">342</div>
                  </div>
                  <div class="summary-item">
                    <div class="summary-label">Actives</div>
                    <div class="summary-value">285</div>
                  </div>
                </div>
              </div>

              <div class="report-card">
                <div class="report-header">
                  <h3>Litiges</h3>
                  <div class="report-actions">
                    <button class="report-action">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <circle cx="12" cy="12" r="1"></circle>
                        <circle cx="19" cy="12" r="1"></circle>
                        <circle cx="5" cy="12" r="1"></circle>
                      </svg>
                    </button>
                  </div>
                </div>
                <div class="chart-container">
                  <canvas id="disputesChart"></canvas>
                </div>
                <div class="report-summary">
                  <div class="summary-item">
                    <div class="summary-label">Total</div>
                    <div class="summary-value">15</div>
                  </div>
                  <div class="summary-item">
                    <div class="summary-label">Résolus</div>
                    <div class="summary-value">10</div>
                  </div>
                </div>
              </div>
            </div>

            <div class="detailed-reports">
              <div class="report-section">
                <div class="section-header">
                  <h3>Rapport détaillé des revenus</h3>
                  <div class="section-actions">
                    <button class="export-btn">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path
                          d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
                        ></path>
                        <polyline points="7 10 12 15 17 10"></polyline>
                        <line x1="12" y1="15" x2="12" y2="3"></line>
                      </svg>
                      Exporter
                    </button>
                  </div>
                </div>
                <div class="data-table">
                  <table>
                    <thead>
                      <tr>
                        <th>Mois</th>
                        <th>Revenus</th>
                        <th>Commissions</th>
                        <th>Croissance</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>Janvier</td>
                        <td>3,250DA</td>
                        <td>325DA</td>
                        <td><span class="growth positive">+5.2%</span></td>
                      </tr>
                      <tr>
                        <td>Février</td>
                        <td>3,850DA</td>
                        <td>385DA</td>
                        <td><span class="growth positive">+18.5%</span></td>
                      </tr>
                      <tr>
                        <td>Mars</td>
                        <td>4,120DA</td>
                        <td>412DA</td>
                        <td><span class="growth positive">+7.0%</span></td>
                      </tr>
                      <tr>
                        <td>Avril</td>
                        <td>3,980DA</td>
                        <td>398DA</td>
                        <td><span class="growth negative">-3.4%</span></td>
                      </tr>
                      <tr>
                        <td>Mai</td>
                        <td>4,350DA</td>
                        <td>435DA</td>
                        <td><span class="growth positive">+9.3%</span></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>

              <div class="report-section">
                <div class="section-header">
                  <h3>Rapport d'activité des utilisateurs</h3>
                  <div class="section-actions">
                    <button class="export-btn">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path
                          d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
                        ></path>
                        <polyline points="7 10 12 15 17 10"></polyline>
                        <line x1="12" y1="15" x2="12" y2="3"></line>
                      </svg>
                      Exporter
                    </button>
                  </div>
                </div>
                <div class="data-table">
                  <table>
                    <thead>
                      <tr>
                        <th>Période</th>
                        <th>Nouveaux utilisateurs</th>
                        <th>Utilisateurs actifs</th>
                        <th>Taux de rétention</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>Janvier</td>
                        <td>85</td>
                        <td>320</td>
                        <td>78%</td>
                      </tr>
                      <tr>
                        <td>Février</td>
                        <td>95</td>
                        <td>345</td>
                        <td>82%</td>
                      </tr>
                      <tr>
                        <td>Mars</td>
                        <td>110</td>
                        <td>380</td>
                        <td>85%</td>
                      </tr>
                      <tr>
                        <td>Avril</td>
                        <td>125</td>
                        <td>410</td>
                        <td>83%</td>
                      </tr>
                      <tr>
                        <td>Mai</td>
                        <td>140</td>
                        <td>450</td>
                        <td>87%</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>

              <div class="report-section">
                <div class="section-header">
                  <h3>Rapport des annonces par catégorie</h3>
                  <div class="section-actions">
                    <button class="export-btn">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path
                          d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
                        ></path>
                        <polyline points="7 10 12 15 17 10"></polyline>
                        <line x1="12" y1="15" x2="12" y2="3"></line>
                      </svg>
                      Exporter
                    </button>
                  </div>
                </div>
                <div class="data-table">
                  <table>
                    <thead>
                      <tr>
                        <th>Catégorie</th>
                        <th>Nombre d'annonces</th>
                        <th>Prix moyen</th>
                        <th>Taux de réservation</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>Citadine</td>
                        <td>120</td>
                        <td>35DA/jour</td>
                        <td>68%</td>
                      </tr>
                      <tr>
                        <td>Berline</td>
                        <td>85</td>
                        <td>55DA/jour</td>
                        <td>72%</td>
                      </tr>
                      <tr>
                        <td>SUV</td>
                        <td>65</td>
                        <td>75DA/jour</td>
                        <td>80%</td>
                      </tr>
                      <tr>
                        <td>Utilitaire</td>
                        <td>45</td>
                        <td>65DA/jour</td>
                        <td>75%</td>
                      </tr>
                      <tr>
                        <td>Luxe</td>
                        <td>27</td>
                        <td>120DA/jour</td>
                        <td>62%</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <script src="/js/admin/admin.js"></script>
  </body>
</html>
